<prism:PrismApplication
    x:Class="MachineVision.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MachineVision"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Dark"
                    ColorAdjustment="{materialDesign:ColorAdjustment}"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Amber" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MachineVision.Shared;component/Themes/Generic.xaml" />
                <!--资源字典在 UI 端的典型用途
                用途	示例
                🎨 样式复用	按钮、文本框、控件的统一外观样式（<Style>）
                📐 控件模板	控件的结构和布局定义（<ControlTemplate>、<DataTemplate>）
                🌈 主题配色	颜色（SolidColorBrush）、字体（FontFamily）的集中管理
                🖼 图标资源	图像路径（ImageSource）或矢量图标（DrawingImage）
                🔄 动画与视觉状态	Storyboard、VisualStateManager 等-->
                <!--  多语言资源  -->
                <ResourceDictionary Source="pack://application:,,,/MachineVision;component/Assets/zh-CN.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MachineVision;component/Assets/en-US.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
