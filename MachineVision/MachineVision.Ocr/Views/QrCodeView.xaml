<UserControl
    x:Class="MachineVision.Ocr.Views.QrCodeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MachineVision.Shared.Controls;assembly=MachineVision.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Margin="15">
            <TextBlock
                FontSize="22"
                FontWeight="Bold"
                Text="{Binding QrCodeService.Info.Name}" />
            <TextBlock Text="{Binding QrCodeService.Info.Description}" />
        </StackPanel>

        <TabControl Grid.Row="1" HorizontalContentAlignment="Left">
            <TabItem Header="参数说明">
                <ItemsControl Margin="15,5" ItemsSource="{Binding QrCodeService.Info.Parameters}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5">
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    Margin="20,5,0,0"
                                    Text="{Binding Description}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </TabItem>
            <TabItem Header="关联算子">
                <ItemsControl Margin="15,5" ItemsSource="{Binding QrCodeService.Info.Predecessors}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5">
                                <TextBlock FontSize="14" Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </TabItem>
            <TabItem Header="代码示例" />
            <TabItem Header="开始使用">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.3*" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <controls:ImageEditView DrawObjectList="{Binding DrawObjectList}" Image="{Binding Image}" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="10"
                            Text="{Binding MatchResult.Message}" />
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Margin="5,0">
                            <Button Command="{Binding LoadImageCommand}" Content="加载图像" />
                            <Button
                                Margin="0,10,0,0"
                                Command="{Binding SetRangeCommand}"
                                Content="设置识别范围" />
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="5,10">
                            <Button Command="{Binding RunCommand}" Content="执行" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
